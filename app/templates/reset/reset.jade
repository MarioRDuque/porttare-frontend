ion-view(
  view-title="Actualiza tu contraseña",
  hide-nav-bar="true"
)
  ion-content
    .update-password-view
      .row
        .col.header-text
          | Actualiza tu contraseña
      .row
        form.form-container(ng-submit='resetVm.updatePassword()')
          .list
            label.item.item-input
              span.lock-left-icon
              input(
                type='password',
                ng-model='resetVm.updatePasswordForm.password',
                required='required',
                placeholder="Contraseña"
              )
            label.item.item-input
              span.lock-left-icon
              input(
                type='password',
                ng-model='resetVm.updatePasswordForm.password_confirmation',
                required='required',
                placeholder="Confirmar contraseña"
              )
          .button-actions
            button(
              type='submit'
            ).button.button-full.button-primary.spaced
              | Actualizar contraseña
  .bar.bar-footer.bar-footer-send-email
